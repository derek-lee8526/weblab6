<h2>Member login</h2>

<form action="/login" method="post" class='loginform'>

  <div class="container">
    <label for="uname"><b>Username</b></label>
    <input type='text' name='uname' placeholder="Enter Username" class='loginForm'>

    <label for="psw"><b>Password</b></label>
      <input type='password' name='pword' placeholder="Enter Password"class='loginForm'>
        
    <button type="submit" class='loginbutton'>Login</button>
    <label>
      <input type="checkbox" checked="checked" name="remember"class='loginForm'> Remember me
    </label>
  </div>

  <div class="container" style="background-color:#f1f1f1">
    <button type="button" class="cancelbtn">Cancel</button>
    <span class="psw">Forgot <a href="#">password?</a></span>
  </div>
</form>
